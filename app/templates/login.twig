{% extends "base.twig" %}

{% block title %}- Login{% endblock %}

{% block content %}

    {% if failedlogin == true %}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      Username and/or Password not recognised.
    </div>
    {% endif %}

    <center>
    <img src="https://www.kde.org/stuff/clipart/klogo-official-lineart_detailed-3000x3000.png"
        style="width: 100px; height: 100px">
    </center>

    <br />

    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><h3 class="panel-title">Please Sign In</h3></center>
                </div>
                <div class="panel-body">
                    Please sign in using your <strong>KDE Identity</strong> Login Credentials. If you do not have login credentials, you may register <a href="https://identity.kde.org/">here</a>.<br /><br />
                    <form accept-charset="UTF-8" role="form" method="post">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Username" name="username" type="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" value="">
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                        <a class="btn btn-lg btn-primary btn-block" href="https://identity.kde.org/">Register</a>
                    </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}